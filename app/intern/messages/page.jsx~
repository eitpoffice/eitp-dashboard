"use client";
import { useState } from 'react';
import { useAdmin } from '@/context/AdminContext';
import { Mail, Trash2, User, Clock, Inbox, Loader2, Send, X, AtSign, CheckCircle2 } from 'lucide-react';
import { motion, AnimatePresence } from 'framer-motion';

export default function MessageInbox() {
  const { 
    contactMessages = [], 
    deleteMessage, 
    resolveMessage, 
    sendReplyEmail, 
    currentIntern, // Access the logged-in user's data
    loading 
  } = useAdmin();

  const [filter, setFilter] = useState('all');
  const [replyingTo, setReplyingTo] = useState(null);
  const [replyText, setReplyText] = useState("");
  const [sending, setSending] = useState(false);

  const filtered = contactMessages.filter(m => {
    if (filter === 'all') return true;
    return m.status === filter;
  });

  const handleSendReply = async () => {
    if (!replyText || !replyingTo) return;
    setSending(true);
    try {
      // 1. Send the email via EmailJS
      await sendReplyEmail(replyingTo.email, replyingTo.student_id, replyText);
      
      // 2. Identify who is resolving the message
      // If an intern is logged in, use their name. If not (Admin), use 'Administrator'
      const resolverName = currentIntern?.name || "Administrator";
      
      // 3. Update status and recorder resolver in Supabase
      await resolveMessage(replyingTo.id, resolverName);
      
      alert(`Reply sent and marked as resolved by ${resolverName}`);
      setReplyingTo(null);
      setReplyText("");
    } catch (err) {
      alert("Error processing reply. Please check connection.");
    } finally {
      setSending(false);
    }
  };

  if (loading) {
    return (
      <div className="flex flex-col items-center justify-center py-20">
        <Loader2 className="animate-spin text-blue-600 mb-4" size={40} />
        <p className="text-slate-500 font-medium">Loading your inbox...</p>
      </div>
    );
  }

  return (
    <div className="max-w-6xl mx-auto space-y-6">
      {/* Header */}
      <div className="flex flex-col md:flex-row md:items-center justify-between gap-4 bg-white p-6 rounded-2xl border border-slate-200 shadow-sm">
        <div>
          <h1 className="text-2xl font-bold text-slate-900 flex items-center gap-2">
            <Inbox className="text-blue-600" /> Student Queries
          </h1>
          <p className="text-slate-500 text-sm">Manage and respond to student inquiries.</p>
        </div>
        
        <div className="flex bg-slate-100 p-1 rounded-xl w-fit shadow-inner">
          {['all', 'unread', 'resolved'].map((f) => (
            <button
              key={f}
              onClick={() => setFilter(f)}
              className={`px-4 py-2 rounded-lg text-xs font-bold uppercase transition-all duration-200 ${
                filter === f ? 'bg-white text-blue-600 shadow-sm' : 'text-slate-500 hover:text-slate-700'
              }`}
            >
              {f}
            </button>
          ))}
        </div>
      </div>

      {/* Message List */}
      <div className="grid gap-4">
        <AnimatePresence mode='popLayout'>
          {filtered.length > 0 ? (
            filtered.map((msg) => (
              <motion.div
                key={msg.id}
                layout
                initial={{ opacity: 0, x: -20 }}
                animate={{ opacity: 1, x: 0 }}
                exit={{ opacity: 0, scale: 0.95 }}
                className={`border p-6 rounded-2xl transition-all duration-300 group relative ${
                  msg.status === 'resolved' 
                    ? 'bg-slate-50/50 border-slate-100 opacity-75 shadow-none' 
                    : 'bg-white border-slate-200 shadow-sm hover:shadow-md'
                }`}
              >
                <div className="flex flex-col md:flex-row md:items-start justify-between gap-4">
                  <div className="flex gap-4">
                    <div className={`w-12 h-12 rounded-xl flex items-center justify-center shrink-0 ${
                      msg.status === 'resolved' ? 'bg-slate-200 text-slate-500' : 'bg-blue-50 text-blue-600'
                    }`}>
                      <User size={20} />
                    </div>
                    <div>
                      <div className="flex items-center gap-3 mb-1">
                        <h3 className="font-bold text-slate-900 flex items-center gap-2">
                          {msg.student_id} 
                          <span className="text-slate-300 font-normal">|</span>
                          <span className="text-blue-600 text-xs flex items-center gap-1 font-medium lowercase">
                            <AtSign size={12}/> {msg.email}
                          </span>
                        </h3>
                        {msg.status === 'resolved' ? (
                          <div className="flex flex-col">
                            <span className="text-[10px] px-2 py-0.5 rounded-full font-black uppercase bg-green-100 text-green-700 flex items-center gap-1 w-fit">
                              <CheckCircle2 size={10} /> Resolved
                            </span>
                            <span className="text-[9px] text-slate-400 mt-0.5 ml-1">By: {msg.resolved_by || 'Admin'}</span>
                          </div>
                        ) : (
                          <span className="text-[10px] px-2 py-0.5 rounded-full font-black uppercase bg-blue-50 text-blue-600">
                            Unread
                          </span>
                        )}
                      </div>
                      <div className="flex items-center gap-4 text-xs text-slate-400 mb-3 font-medium">
                        <span className="flex items-center gap-1"><Clock size={12}/> {new Date(msg.created_at).toLocaleString()}</span>
                      </div>
                      <p className={`text-sm leading-relaxed whitespace-pre-wrap p-4 rounded-xl border ${
                        msg.status === 'resolved' 
                        ? 'bg-white/50 text-slate-500 border-slate-100 italic' 
                        : 'bg-slate-50 text-slate-700 border-slate-100'
                      }`}>
                        {msg.message}
                      </p>
                    </div>
                  </div>

                  <div className="flex md:flex-col gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                    {msg.status !== 'resolved' && (
                      <>
                        <button 
                          onClick={() => setReplyingTo(msg)}
                          className="p-3 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition shadow-lg shadow-blue-100"
                          title="Reply via Email"
                        >
                          <Send size={18} />
                        </button>
                        <button 
                          onClick={() => resolveMessage(msg.id, currentIntern?.name || "Administrator")}
                          className="p-3 bg-green-50 text-green-600 rounded-xl hover:bg-green-600 hover:text-white transition"
                          title="Mark as Resolved"
                        >
                          <CheckCircle2 size={18} />
                        </button>
                      </>
                    )}
                    <button 
                      onClick={() => { if(confirm("Delete this message permanently?")) deleteMessage(msg.id) }}
                      className="p-3 bg-red-50 text-red-500 rounded-xl hover:bg-red-500 hover:text-white transition"
                      title="Delete Message"
                    >
                      <Trash2 size={18} />
                    </button>
                  </div>
                </div>
              </motion.div>
            ))
          ) : (
            <div className="text-center py-20 bg-white border-2 border-dashed border-slate-200 rounded-3xl">
              <Mail size={48} className="mx-auto text-slate-200 mb-4" />
              <p className="text-slate-400 font-medium">No messages found in this category.</p>
            </div>
          )}
        </AnimatePresence>
      </div>

      {/* Reply Modal */}
      <AnimatePresence>
        {replyingTo && (
          <div className="fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
            <motion.div 
              initial={{ opacity: 0, scale: 0.9, y: 20 }}
              animate={{ opacity: 1, scale: 1, y: 0 }}
              exit={{ opacity: 0, scale: 0.9, y: 20 }}
              className="bg-white rounded-[2.5rem] p-10 w-full max-w-lg shadow-2xl border border-white/20"
            >
              <div className="flex justify-between items-center mb-8">
                <div>
                  <h3 className="font-bold text-2xl text-slate-900 tracking-tight">Send Reply</h3>
                  <p className="text-xs font-bold text-blue-600 mt-1 uppercase tracking-widest flex items-center gap-1">
                    <AtSign size={12}/> {replyingTo.email}
                  </p>
                </div>
                <button 
                  onClick={() => setReplyingTo(null)}
                  className="p-2 text-slate-400 hover:text-slate-900 rounded-full hover:bg-slate-100 transition-colors"
                >
                  <X size={24}/>
                </button>
              </div>

              <div className="space-y-6">
                <div className="bg-slate-50 p-4 rounded-2xl border border-slate-100 text-[13px] text-slate-500 leading-relaxed italic relative">
                  <span className="absolute -top-3 left-4 bg-white px-2 text-[10px] font-black uppercase text-slate-400 border border-slate-100 rounded-full">Student Query</span>
                  "{replyingTo.message}"
                </div>
                <textarea 
                  className="w-full border border-slate-200 p-5 rounded-3xl h-48 outline-none focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 transition-all text-sm leading-relaxed"
                  placeholder="Type your professional response here..."
                  value={replyText}
                  onChange={(e) => setReplyText(e.target.value)}
                  autoFocus
                />
              </div>

              <button 
                onClick={handleSendReply}
                disabled={sending || !replyText}
                className="w-full mt-8 bg-slate-900 text-white font-bold py-5 rounded-2xl flex items-center justify-center gap-3 hover:bg-slate-800 transition-all active:scale-[0.98] disabled:bg-slate-200 disabled:cursor-not-allowed shadow-xl shadow-slate-200"
              >
                {sending ? <Loader2 className="animate-spin" size={20} /> : <><Send size={20}/> Send & Mark Resolved</>}
              </button>
            </motion.div>
          </div>
        )}
      </AnimatePresence>
    </div>
  );
}
