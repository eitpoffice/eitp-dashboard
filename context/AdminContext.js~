"use client";
import { createContext, useContext, useState, useEffect } from 'react';
import { supabase } from '../lib/supabase';
import emailjs from '@emailjs/browser';
import { useRouter } from 'next/navigation';

const AdminContext = createContext();

export function AdminProvider({ children }) {
  const router = useRouter();

  // --- 1. AUTH STATE ---
  const [user, setUser] = useState(null); // The technical Supabase Auth User (Email, ID)
  const [currentIntern, setCurrentIntern] = useState(null); // The Profile Data (Name, Branch, etc.)
  const [loading, setLoading] = useState(true);

  // --- 2. DATA STATE ---
  const [admins, setAdmins] = useState([]);
  const [interns, setInterns] = useState([]);
  const [tasks, setTasks] = useState([]);
  const [events, setEvents] = useState([]);
  const [gallery, setGallery] = useState([]);
  const [notifications, setNotifications] = useState([]);
  const [submissions, setSubmissions] = useState([]);
  const [mous, setMous] = useState([]);
  const [documents, setDocuments] = useState([]);
  const [contactMessages, setContactMessages] = useState([]);

  // --- 3. INITIALIZATION & REAL-TIME ---
  useEffect(() => {
    emailjs.init("WDzmjAq6UIBFXe6Ou"); 
    
    // A. Check for existing session on load
    const initializeAuth = async () => {
      const { data: { session } } = await supabase.auth.getSession();
      if (session?.user) {
        setUser(session.user);
        await fetchUserProfile(session.user.email);
      }
      setLoading(false);
    };

    initializeAuth();

    // B. Listen for Login/Logout events automatically
    const { data: { subscription } } = supabase.auth.onAuthStateChange(async (event, session) => {
      setUser(session?.user ?? null);
      if (session?.user) {
        await fetchUserProfile(session.user.email);
      } else {
        setCurrentIntern(null);
      }
      setLoading(false);
    });

    // C. Data Sync
    fetchAllData();
    const channel = supabase.channel('db-changes')
      .on('postgres_changes', { event: '*', schema: 'public' }, () => fetchAllData())
      .subscribe();

    return () => { 
      subscription.unsubscribe();
      supabase.removeChannel(channel); 
    };
  }, []);

  // --- 4. SECURE AUTH ACTIONS ---

  // Helper to get name/branch from the database using the logged-in email
  const fetchUserProfile = async (email) => {
    // Check if it's an Intern
    let { data, error } = await supabase.from('interns').select('*').eq('email', email).single();
    
    if (data) {
      setCurrentIntern({ ...data, role: 'intern' });
    } else {
      // If not intern, check if Admin
      const { data: adminData } = await supabase.from('admins').select('*').eq('email', email).single();
      if (adminData) {
        setCurrentIntern({ ...adminData, role: 'admin', name: 'Administrator' });
      }
    }
  };

  const loginIntern = async (email, password) => {
    // Uses Supabase Auth (Secure) instead of checking password manually
    const { data, error } = await supabase.auth.signInWithPassword({
      email,
      password,
    });
    
    if (error) throw error;
    return data;
  };

  const logoutIntern = async () => {
    await supabase.auth.signOut();
    setCurrentIntern(null);
    setUser(null);
    router.push('/'); 
  };

  // --- 5. DATA FETCHING ---
  const fetchAllData = async () => {
    await Promise.all([
      fetchTable('admins', setAdmins),
      fetchTable('interns', setInterns),
      fetchTable('tasks', setTasks),
      fetchTable('events', setEvents),
      fetchTable('gallery', setGallery),
      fetchTable('notifications', setNotifications),
      fetchTable('submissions', setSubmissions),
      fetchTable('mous', setMous),
      fetchTable('documents', setDocuments),
      fetchTable('contact_messages', setContactMessages)
    ]);
  };

  const fetchTable = async (tableName, setState) => {
    const { data } = await supabase.from(tableName).select('*').order('created_at', { ascending: false });
    if (data) setState(data);
  };

  // --- 6. FILE UPLOAD (Unique & Secure) ---
  const uploadFile = async (file, folder) => {
    if (!file) return null;

    const cleanName = file.name.replace(/[^a-zA-Z0-9.]/g, '_').replace(/_{2,}/g, '_');
    const uniqueId = `${Date.now()}_${Math.random().toString(36).substring(2, 7)}`;
    const fileName = `${uniqueId}_${cleanName}`;

    const { error } = await supabase.storage.from('uploads').upload(`${folder}/${fileName}`, file);
    if (error) {
      console.error("Upload Error:", error);
      return null;
    }

    const { data: { publicUrl } } = supabase.storage.from('uploads').getPublicUrl(`${folder}/${fileName}`);
    return publicUrl;
  };

  // --- 7. DATABASE ACTIONS ---

  // Interns
  const addIntern = async (i) => {
    // Note: In production, you might want to create a Supabase Auth User here too
    const { error } = await supabase.from('interns').insert([{ ...i, status: 'Active' }]);
    if (error) throw error;
  };
  const removeIntern = async (id) => {
    await supabase.from('interns').delete().eq('id', id);
  };

  // Tasks
  const addTask = async (t) => await supabase.from('tasks').insert([{ ...t, status: 'Pending', comments: [] }]);
  const deleteTask = async (id) => await supabase.from('tasks').delete().eq('id', id);
  const updateTaskStatus = async (id, status) => await supabase.from('tasks').update({ status }).eq('id', id);

  // Submissions (With Unique Uploads)
  const submitWork = async (w) => {
    const url = await uploadFile(w.file, 'submissions');
    if (!url) throw new Error("Upload failed");
    
    const { error } = await supabase.from('submissions').insert([{ 
      intern_name: w.intern_name,
      title: w.title,
      file_name: w.file_name,
      file_url: url, 
      status: 'Pending', 
      date: new Date().toLocaleDateString(),
      comments: [] 
    }]);
    if (error) throw error;
  };

  const sendSubmissionComment = async (subId, commentData) => {
    const { data: sub } = await supabase.from('submissions').select('comments').eq('id', subId).single();
    const comments = sub?.comments || [];
    
    await supabase.from('submissions').update({ 
      comments: [...comments, { ...commentData, id: Date.now(), time: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) }] 
    }).eq('id', subId);
  };
  
  const markAsReviewed = async (id) => await supabase.from('submissions').update({ status: 'Reviewed' }).eq('id', id);

  // Gallery
  const addImage = async (i) => {
    const url = await uploadFile(i.file, 'gallery');
    if (url) await supabase.from('gallery').insert([{ ...i, url }]);
  };
  const deleteImage = async (id) => await supabase.from('gallery').delete().eq('id', id);

  // Messages & Notifications
  const sendContactMessage = async (msg) => await supabase.from('contact_messages').insert([msg]);
  const deleteMessage = async (id) => await supabase.from('contact_messages').delete().eq('id', id);
  const resolveMessage = async (id, by) => await supabase.from('contact_messages').update({ status: 'resolved', resolved_by: by }).eq('id', id);
  
  const sendReplyEmail = async (to, id, msg) => {
    return emailjs.send('service_blcq9rx', 'template_8see8ss', { to_email: to, student_id: id, message: msg, reply_to: 'eitp@rgukt.ac.in' });
  };

  const addNotification = async (n) => await supabase.from('notifications').insert([{ ...n, date: new Date().toLocaleString() }]);
  const deleteNotification = async (id) => await supabase.from('notifications').delete().eq('id', id);

  // Documents & MOUs
  const addDocument = async (d) => {
    const url = await uploadFile(d.file, 'documents');
    if (url) await supabase.from('documents').insert([{ ...d, file_url: url }]);
  };
  const deleteDocument = async (id) => await supabase.from('documents').delete().eq('id', id);

  const addMou = async (m) => {
    const logo = await uploadFile(m.logoFile, 'logos');
    const photo = await uploadFile(m.photoFile, 'photos');
    const doc = await uploadFile(m.docFile, 'docs');
    await supabase.from('mous').insert([{ ...m, logo_url: logo, photo_url: photo, doc_url: doc }]);
  };
  const deleteMou = async (id) => await supabase.from('mous').delete().eq('id', id);

  return (
    <AdminContext.Provider value={{ 
      user, currentIntern, loading, // Auth State
      admins, interns, tasks, events, gallery, notifications, submissions, mous, documents, contactMessages, // Data State
      loginIntern, logoutIntern, // Auth Actions
      addIntern, removeIntern, addTask, deleteTask, updateTaskStatus, // Intern/Task Actions
      addEvent, deleteEvent, addImage, deleteImage, // Content Actions
      sendContactMessage, deleteMessage, resolveMessage, sendReplyEmail, // Communication Actions
      addNotification, deleteNotification, markAsReviewed, submitWork, sendSubmissionComment, // Submission Actions
      addDocument, deleteDocument, addMou, deleteMou // Resource Actions
    }}>
      {children}
    </AdminContext.Provider>
  );
}

export const useAdmin = () => useContext(AdminContext);
